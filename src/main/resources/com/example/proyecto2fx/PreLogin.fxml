<?xml version="1.0" encoding="UTF-8"?>

<!--
  PreLogin.fxml
  Pantalla de selección de rol para ingresar al sistema ElderLive.
-->

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.proyectoinformatica1.elderlive.controller.PreLoginController">

    <stylesheets>
        <URL value="@../css/style.css" /> <!-- Ruta relativa al archivo CSS -->
    </stylesheets>

    <children>
        <VBox alignment="CENTER" layoutX="0" layoutY="0" maxHeight="1.7976931348623157E308" maxWidth="-Infinity" prefHeight="400" prefWidth="600" spacing="20">
            <!-- Logo ElderLive -->
            <ImageView fx:id="logoImageView" fitWidth="180" preserveRatio="true" />

            <!-- Texto principal -->
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="¿Quién eres?" />

            <!-- Botones para seleccionar rol -->
            <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="-Infinity" minHeight="-Infinity" spacing="30.0">
                <!-- Botón Paciente -->
                <VBox alignment="CENTER" spacing="5">
                    <ImageView fx:id="pacienteIcon" fitWidth="60" preserveRatio="true" />
                    <Button fx:id="btnPaciente" maxWidth="-Infinity" prefHeight="25.0" prefWidth="100.0" text="Paciente" />
                </VBox>
                <!-- Botón Familiar -->
                <VBox alignment="CENTER" spacing="5">
                    <ImageView fx:id="familiarIcon" fitWidth="60" preserveRatio="true" />
                    <Button fx:id="btnFamiliar" prefWidth="100" text="Familiar" />
                </VBox>
                <!-- Botón Doctor -->
                <VBox alignment="CENTER" spacing="5">
                    <ImageView fx:id="doctorIcon" fitWidth="60" preserveRatio="true" />
                    <Button fx:id="btnDoctor" prefWidth="100" text="Doctor" />
                </VBox>
            <padding>
               <Insets bottom="30.0" left="50.0" right="50.0" top="10.0" />
            </padding>
            <VBox.margin>
               <Insets />
            </VBox.margin>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
